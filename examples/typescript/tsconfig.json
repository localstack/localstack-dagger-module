{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@dagger.io/dagger": [
        "./sdk/src"
      ],
      "@dagger.io/dagger/telemetry": [
        "./sdk/src/telemetry"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}